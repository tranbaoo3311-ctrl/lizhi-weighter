/**pages/index/index.wxss**/
.page-container {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: #999;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-card {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  cursor: pointer;
  transition: box-shadow 0.3s;
}

.product-card:active {
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.12);
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.product-price {
  font-size: 28rpx;
  color: #FF9800; /* Orange color for price */
}
