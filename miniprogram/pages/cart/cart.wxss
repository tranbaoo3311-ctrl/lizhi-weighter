/* pages/cart/cart.wxss */
.page-container {
  width: 100%;
  padding-bottom: 140rpx; /* Leave space for the summary container */
}

.empty-cart-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  color: #999;
}

.cart-list {
  display: flex;
  flex-direction: column;
}

.cart-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 30rpx;
  color: #333;
}

.item-price {
  font-size: 26rpx;
  color: #999;
}

.item-controls {
  display: flex;
  align-items: center;
}

.control-btn {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: 1rpx solid #ccc;
  background-color: #f7f7f7;
  padding: 0;
  margin: 0 10rpx;
}

.item-quantity {
  width: 60rpx;
  text-align: center;
  font-size: 28rpx;
}

.remove-btn {
  font-size: 24rpx;
  color: #fff;
  background-color: #f44336;
  border: none;
  padding: 8rpx 16rpx;
  margin-left: 20rpx;
}

.summary-container {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.total-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF9800;
}

.submit-btn {
  background-color: #FF9800;
  color: white;
  border-radius: 40rpx;
  font-size: 30rpx;
  padding: 0 40rpx;
}
